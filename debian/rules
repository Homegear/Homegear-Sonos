#!/usr/bin/make -f

override_dh_auto_install:
	dh_auto_install

	mkdir -p $(CURDIR)/debian/homegear-sonos/etc/homegear/devices/6
	cp $(CURDIR)/misc/Device\ Description\ Files/* $(CURDIR)/debian/homegear-sonos/etc/homegear/devices/6
	chmod 755 $(CURDIR)/debian/homegear-sonos/etc/homegear/devices/6
	chmod 644 $(CURDIR)/debian/homegear-sonos/etc/homegear/devices/6/*

override_dh_strip:
	dh_strip --dbg-package=homegear-sonos

%:
	dh $@ --parallel
